<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sideLayout"
    android:layout_width="120dp"
    android:layout_height="250dp"
    android:background="@color/black_overlay"
    >

    <ListView
        android:id="@+id/side_ITIlist"
        android:layout_width="match_parent"
        android:layout_height="120dp">


    </ListView>




    <ImageView
        android:id="@+id/side_plus_onIti"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/iti_plus"
        android:layout_below="@+id/side_ITIlist"
        android:layout_alignParentStart="true"
        android:onClick="clickPlus"/>
    <ImageView
        android:src="@mipmap/iti_minus"
        android:id="@+id/side_minus_onIti"
        android:layout_marginLeft="60dp"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_below="@+id/side_ITIlist"
        android:layout_alignParentEnd="true"
        android:onClick="clickMinus"/>

</RelativeLayout>